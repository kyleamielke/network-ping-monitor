# Application settings
SPRING_PROFILES_ACTIVE=dev
SPRING_APPLICATION_NAME=alert-service
SERVER_PORT=8084

# Database settings (service-specific)
SPRING_DATASOURCE_URL=jdbc:postgresql://timescaledb:5432/support_alert_db
SPRING_DATASOURCE_USERNAME=support_alert_user
SPRING_DATASOURCE_PASSWORD=your_secure_password_here
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# Database initialization (for application-level init)
DB_NAME=support_alert_db
DB_USER=support_alert_user
DB_PASSWORD=your_secure_password_here

# Kafka settings
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_DEVICE_EVENTS=device-events
KAFKA_TOPIC_PING_MONITORING_EVENTS=ping-monitoring-events
KAFKA_TOPIC_ALERT_LIFECYCLE_EVENTS=alert-lifecycle-events
KAFKA_CONSUMER_GROUP_ID=alert-service
SPRING_KAFKA_CONSUMER_GROUP_ID=alert-service

# Consul settings
SPRING_CLOUD_CONSUL_HOST=consul
SPRING_CLOUD_CONSUL_PORT=8500
SPRING_CLOUD_CONSUL_DISCOVERY_ENABLED=true

# Database initialization
ALERT_SERVICE_DATABASE_INITIALIZATION_ENABLED=true
ALERT_SERVICE_DATABASE_INITIALIZATION_CREATE_DATABASE=true
ALERT_SERVICE_DATABASE_INITIALIZATION_CREATE_USER=true
ALERT_SERVICE_DATABASE_INITIALIZATION_DATABASE_NAME=support_alert_db
ALERT_SERVICE_DATABASE_INITIALIZATION_USERNAME=support_alert_user
ALERT_SERVICE_DATABASE_INITIALIZATION_PASSWORD=your_secure_password_here

# Alert Rules Configuration
ALERT_DEVICE_DOWN_THRESHOLD=3
ALERT_DEVICE_RECOVERY_THRESHOLD=2

# Alert Cleanup Configuration
ALERT_CLEANUP_RETENTION_DAYS=30
ALERT_CLEANUP_INTERVAL_HOURS=24

# JPA settings
JPA_DDL_AUTO=update

# Logging settings
LOG_LEVEL_ALERT=DEBUG
LOG_LEVEL_SPRING_WEB=WARN