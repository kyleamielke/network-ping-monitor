# Application settings
SPRING_PROFILES_ACTIVE=dev
SPRING_APPLICATION_NAME=report-service
SERVER_PORT=8085

# Database settings
SPRING_DATASOURCE_URL=jdbc:postgresql://timescaledb:5432/support_report_db
SPRING_DATASOURCE_USERNAME=support_report_user
SPRING_DATASOURCE_PASSWORD=your_secure_password_here
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# Kafka settings
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092
SPRING_KAFKA_CONSUMER_GROUP_ID=report-service
KAFKA_TOPIC_DEVICE_EVENTS=device-events
KAFKA_TOPIC_PING_MONITORING_EVENTS=ping-monitoring-events
KAFKA_TOPIC_ALERT_LIFECYCLE_EVENTS=alert-lifecycle-events

# Consul settings
SPRING_CLOUD_CONSUL_HOST=consul
SPRING_CLOUD_CONSUL_PORT=8500
SPRING_CLOUD_CONSUL_DISCOVERY_ENABLED=true

# Service URLs (for report generation)
DEVICE_SERVICE_URL=http://device-service:8081
PING_SERVICE_URL=http://ping-service:8082
ALERT_SERVICE_URL=http://alert-service:8084

# Report storage settings
REPORT_STORAGE_PATH=/app/reports
REPORT_RETENTION_DAYS=30

# Logging settings
LOGGING_LEVEL_IO_THATWORKED_SUPPORT_REPORT=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=INFO
LOGGING_LEVEL_ORG_APACHE_KAFKA=INFO