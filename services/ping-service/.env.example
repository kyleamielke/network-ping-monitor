# Application settings
SPRING_PROFILES_ACTIVE=dev
SPRING_APPLICATION_NAME=ping-service
SERVER_PORT=8082

# Database settings (service-specific)
SPRING_DATASOURCE_URL=jdbc:postgresql://timescaledb:5432/support_ping_db
SPRING_DATASOURCE_USERNAME=support_ping_user
SPRING_DATASOURCE_PASSWORD=your_secure_password_here
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# Database initialization (for application-level init)
DB_NAME=support_ping_db
DB_USER=support_ping_user
DB_PASSWORD=your_secure_password_here

# Ping Executor settings
PING_EXECUTOR_MAX_THREADS=50
PING_EXECUTOR_TIMEOUT_MS=1000
PING_EXECUTOR_PING_INTERVAL=5
PING_EXECUTOR_BATCH_SIZE=2
PING_EXECUTOR_RETRY_ATTEMPTS=3
PING_EXECUTOR_RETRY_DELAY_MS=100

# Virtual Thread Executor settings
PING_EXECUTOR_VIRTUAL_THREADS_ENABLED=true
PING_EXECUTOR_MAX_CONCURRENT_PINGS=1000
PING_EXECUTOR_CIRCUIT_BREAKER_ENABLED=true
PING_EXECUTOR_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
PING_EXECUTOR_CIRCUIT_BREAKER_OPEN_DURATION_MINUTES=5
PING_EXECUTOR_CIRCUIT_BREAKER_HALF_OPEN_INTERVAL_MINUTES=1
PING_EXECUTOR_SCHEDULER_POOL_SIZE=2
PING_EXECUTOR_METRICS_ENABLED=true
PING_EXECUTOR_METRICS_INTERVAL_SECONDS=30

# Retention settings
PING_RETENTION_DAYS=90


# Alerting settings
PING_ALERTING_ENABLED=true
PING_ALERTING_FAILURE_THRESHOLD=3
PING_ALERTING_RECOVERY_THRESHOLD=2
PING_ALERTING_CHECK_INTERVAL=60

# JPA settings
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# Logging settings
LOG_LEVEL_PING=INFO
LOG_LEVEL_SPRING_WEB=WARN

# Kafka settings
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_DEVICE_EVENTS=device-events
KAFKA_TOPIC_PING_MONITORING_EVENTS=ping-monitoring-events
KAFKA_TOPIC_DEVICE_DOWN_ALERTS=device-down-alerts
KAFKA_CONSUMER_GROUP_ID=ping-service
SPRING_KAFKA_CONSUMER_GROUP_ID=ping-service

# Consul settings
SPRING_CLOUD_CONSUL_HOST=consul
SPRING_CLOUD_CONSUL_PORT=8500
SPRING_CLOUD_CONSUL_DISCOVERY_ENABLED=true