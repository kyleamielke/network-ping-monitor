# Application settings
SPRING_PROFILES_ACTIVE=dev
SPRING_APPLICATION_NAME=notification-service
SERVER_PORT=8083

# Consul settings
SPRING_CLOUD_CONSUL_HOST=consul
SPRING_CLOUD_CONSUL_PORT=8500
SPRING_CLOUD_CONSUL_DISCOVERY_ENABLED=true

# Kafka settings
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP_ID=notification-service
SPRING_KAFKA_CONSUMER_GROUP_ID=notification-service
KAFKA_TOPIC_DEVICE_DOWN_ALERTS=device-down-alerts
KAFKA_TOPIC_PING_MONITORING_EVENTS=ping-monitoring-events
KAFKA_TOPIC_ALERT_LIFECYCLE_EVENTS=alert-lifecycle-events


# Email settings - Configure your SMTP provider
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password

# Notification settings
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_EMAIL_FROM=alerts@yourcompany.com
NOTIFICATION_EMAIL_TO=admin@yourcompany.com,ops@yourcompany.com
NOTIFICATION_TO_EMAIL=alerts@yourcompany.com

# Future notification channels
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

NOTIFICATION_TEAMS_ENABLED=false
NOTIFICATION_TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# Logging settings
LOG_LEVEL_NOTIFICATION=DEBUG
LOG_LEVEL_SPRING_WEB=WARN
LOG_LEVEL_KAFKA=INFO
