# API Gateway Service Configuration

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP_ID=api-gateway
KAFKA_CONSUMER_AUTO_OFFSET_RESET=latest
KAFKA_CONSUMER_KEY_DESERIALIZER=org.apache.kafka.common.serialization.StringDeserializer
KAFKA_CONSUMER_VALUE_DESERIALIZER=org.apache.kafka.common.serialization.StringDeserializer
KAFKA_PRODUCER_KEY_SERIALIZER=org.apache.kafka.common.serialization.StringSerializer
KAFKA_PRODUCER_VALUE_SERIALIZER=org.springframework.kafka.support.serializer.JsonSerializer

# Kafka Topics Configuration (customize for different environments)
KAFKA_TOPICS_PING_MONITORING=ping-monitoring-events
KAFKA_TOPICS_ALERT_LIFECYCLE=alert-lifecycle-events
KAFKA_TOPICS_DEVICE_EVENTS=device-events

# Kafka Consumer Groups (customize for scaling)
KAFKA_CONSUMER_GROUP_MONITORING=api-gateway-monitoring
KAFKA_CONSUMER_GROUP_ALERTS=api-gateway

# Ping Monitoring Configuration
PING_DEFAULT_INTERVAL_SECONDS=5

# Service Discovery (if not using Consul)
DEVICE_SERVICE_URL=http://device-service:8081
PING_SERVICE_URL=http://ping-service:8082
NOTIFICATION_SERVICE_URL=http://notification-service:8083
SITE_SERVICE_URL=http://site-service:8084
REPORT_SERVICE_URL=http://report-service:8085
ALERT_SERVICE_URL=http://alert-service:8084
SEARCH_SERVICE_URL=http://search-service:8086

# Consul settings
SPRING_CLOUD_CONSUL_HOST=consul
SPRING_CLOUD_CONSUL_PORT=8500
SPRING_CLOUD_CONSUL_DISCOVERY_ENABLED=true